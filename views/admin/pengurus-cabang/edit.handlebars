<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Cabang</h4>
    </div>
    <div class="card-body">
        <form action="/admin/pengurus-cabang/edit/{{cabang._id}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="{{cabang._id}}">        
            <div class="form-group">
                <label for="title">Nama Cabang</label>
                <input type="text" class="form-control" name="title" id="title" value="{{cabang.title}}">
            </div>
            <img src="{{cabang.file}}" width="50%" alt="{{cabang.file}}" style="border-radius: 50%;">
            <div>
                <label for="file">Perbarui Foto Cabang (disarankan rasio panjang:lebar 1:1)</label>
                <input type="file" class="form-control" id="file" name="uploadedFile">
            </div>
            <div class="form-group">
                <label for="deskripsi">Edit Deskripsi Cabang</label>
                <textarea name="description" id="description" class="form-control" value="">{{cabang.description}}</textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Simpan Perubahan</button>
        </form>
    </div>
</div>