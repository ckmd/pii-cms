<div class="card">
    <div class="card-header">
        <h4 class="card-title">Semua Cabang</h4>
    </div>
    <div class="card-body">
        <a href="/admin/pengurus-cabang/create" class="btn btn-primary">Tambahkan Cabang Baru</a>
        <div class="table-responsive">
            <table id="datatab" class="table display">
                <thead class=" text-primary">
                    <tr class="text-center" style="white-space:nowrap">
                        <th>Nama Cabang</th>
                        <th>Foto Cabang</th>
                        {{!-- <th>Deskripsi</th> --}}
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {{#each cabangs}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td><img src="{{this.file}}" width="100px" alt="" style="border-radius: 50%;"></td>
                        {{!-- <td>{{this.deskripsi}}</td> --}}
                        <td>
                            <a href="/admin/pengurus-cabang/edit/{{this._id}}" class="fa fa-lg fa-edit"></a>
                            <a href="/admin/pengurus-cabang/delete/{{this._id}}" class="fa fa-lg fa-trash" onclick="return confirm('Are you sure to delete this Cabang ?');"></a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>