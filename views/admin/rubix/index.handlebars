<div class="container">
    <div class="alert-secondary text-center">
        <h1>Costumize Rubix</h1>
    </div>

    <table class="table table-bordered">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>Link</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Category</th>
                <th>Views</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each posts}}
            <tr>
                <td>{{this.slug}}</td>
                <td>{{this.title}}</td>
                <td>{{{this.description}}}</td>
                <td>{{this.status}}</td>
                <td>{{this.category.title}}</td>
                <td>{{this.views}}</td>
                <td><img src="{{this.file}}" width="100px" alt=""></td>
                <td>
                    <a href="/admin/posts/edit/{{this._id}}" class="btn btn-warning">Edit</a>
                    {{!-- <a href="/admin/posts/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete this post ?');">Delete</a> --}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/admin/posts" class="btn btn-primary"> add more rubix</a>
</div>