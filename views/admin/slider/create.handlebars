<div class="card">
    <div class="card-header">
    {{!-- <h5 class="card-category">Welcome To PII Admin Dashboard</h5> --}}
        <h4 class="card-title">Add New Image in Slider</h4>
    </div>
    <div class="card-body">
        <form action="/admin/slider/create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="slideke">Tentukan Urutan Image pada Slider</label>
                <input type="number" class="form-control" name="slideke" id="slideke" placeholder="Masukkan urutan Image (dimulai dari 0, 1, dst...)" required>
            </div>                
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title" required>
            </div>                
            <div>
                <label for="file">image Upload</label>
                <input type="file" class="form-control" id="file" name="uploadedFile" required>
                {{!-- <input type="file" class="form-control" id="file" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp"> --}}
            </div>
            <button class="btn btn-primary" type="submit">Add Slider</button>
        </form>
    </div>
</div>