<div class="container">
    <h1>Add New Slider</h1>
    
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/slider/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="slideke">Slide Ke</label>
                    <input type="number" class="form-control" name="slideke" id="slideke" placeholder="Enter The Slideke" required>
                </div>                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title" required>
                </div>                
                <div class="form-group">
                    <label for="file">File Upload</label>
                    <input type="file" class="form-control" id="file" name="uploadedFile" required>
                    {{!-- <input type="file" class="form-control" id="file" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp"> --}}
                </div>
                <button class="btn btn-outline-success btn-lg" type="submit">Add Slider</button>
            </form>
        </div>
    </div>
</div>