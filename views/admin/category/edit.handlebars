<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">All Categories</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatab" class="table display">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>Title</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each categories}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td class="d-flex justify-content-center">
                                    <a href="/admin/category/edit/{{this._id}}" class="btn btn-warning btn-sm mr-2">Edit</a>
                                    <a href="/admin/category/delete/{{this._id}}" class="btn btn-danger btn-sm mr-2" onclick="return confirm('Are you sure to delete this category ?');">Delete</a>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Edit Selected Category</h4>
            </div>
            <div class="card-body">
                <form action="/admin/categories/create" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="category-title" value="{{category.title}}" required>
                        <input type="hidden" class="form-control" name="id" id="category-id" value="{{category._id}}">
                    </div>
                    <button class="btn btn-primary btl-lg" id="update-category-button" type="submit">Edit Category</button>
                </form>
            </div>
        </div>
    </div>
</div>