<div class="container">
    <h1>Create New Post</h1>
    
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/posts/create" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title" required>
                </div>

                <div class="form-group">
                    <label for="introText">Intro Text</label>
                    <input type="text" class="form-control" name="introText" id="introText" placeholder="Enter The Intro Text" required>
                </div>
                
                <div class="form-group">
                    <label for="file">File Upload</label>
                    <input type="file" class="form-control" id="file" name="uploadedFile" required>
                    {{!-- <input type="file" class="form-control" id="file" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp"> --}}
                </div>
                <div class="row">
                    <div class="form-group col md-5">
                        <label for="sponsor1">Sponsor 1</label>
                        <input type="file" class="form-control" id="sponsor1" name="sponsor1">
                    </div>
                    <div class="form-group col md-5">
                        <label for="sponsor2">Sponsor 2</label>
                        <input type="file" class="form-control" id="sponsor2" name="sponsor2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="status">Post Position</label>
                    <select name="status" id="status" class="form-control" required>
                        <option selected>Choose Post Position...</option>
                        <optgroup label="First Navbar">
                            <option value="Keanggotaan">Keanggotaan</option>
                            <option value="Registrasi">Registrasi</option>
                            <option value="Sertifikasi">Sertifikasi</option>
                        </optgroup>
                        <option value="PII">PII</option>
                        <option value="Program-Profesi-Insinyur">Program Profesi Insinyur</option>
                        <optgroup label="Publikasi">
                            <option value="Annual-Report">Annual Report</option>
                            <option value="Additional-Report">Additional Report</option>
                            <option value="Jurnal">Jurnal</option>
                        </optgroup>
                        <option value="Bursa-Kerja">Bursa Kerja</option>
                        <option value="Project-&-Service">Project & Service</option>
                        <option value="Gallery">Gallery</option>
                        <option value="Events">Events</option>
                        <optgroup label="PII Daily">
                            <option value="Info">Info</option>
                            <option value="News">News</option>
                            <option value="Video">Video</option>
                            <option value="Artikel">Artikel</option>
                        </optgroup>
                    </select>
                </div>
                <div class="form-group">
                    <label for="category">Post Category</label>
                    <select name="category" id="category" class="form-control" required>
                        <option selected>Choose Post Category...</option>
                        {{#each categories}}
                            <option value="{{_id}}">{{title}}</option>    
                        {{/each}}
                                             
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="videoLink">Youtube video Link (optional)</label>
                    <input type="text" class="form-control" name="videoLink" id="videoLink" placeholder="Enter The Youtube video link">
                </div>
                <div class="form-group">
                    <label for="author">Author (optional)</label>
                    <input type="text" class="form-control" name="author" id="author" placeholder="Enter The Author Name">
                </div>
                <div class="form-check ml-3">
                    <label for="setAsBanner">
                    <input type="checkbox" class="form-check-input" name="setAsBanner" id="setAsBanner">
                        Set Post as Banner</label>
                </div>                
                <div class="form-check ml-3">
                    <label for="setAsRubix">
                    <input type="checkbox" class="form-check-input" name="setAsRubix" id="setAsRubix">
                        Set Post as Rubix</label>
                </div>
                <div class="form-group">
                    <label for="description">Content</label>
                    <textarea name="description" id="description" class="form-control" placeholder="Enter your content here" rows="10" required></textarea>
                </div>
                
                
                <button class="btn btn-outline-success btn-lg" type="submit">Create Post</button>
                
                
            </form>
        </div>
    </div>
    
</div>