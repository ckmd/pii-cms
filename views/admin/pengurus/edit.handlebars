<div class="card">
    <div class="card-header">
    {{!-- <h5 class="card-category">Welcome To PII Admin Dashboard</h5> --}}
        <h4 class="card-title">Edit Pengurus</h4>
    </div>
    <div class="card-body">
        <form action="/admin/pengurus/edit/{{pengurus._id}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="{{pengurus._id}}">        
            <div class="form-group">
                <label for="nama">Nama</label>
                <input type="text" class="form-control" name="nama" id="nama" value="{{pengurus.nama}}">
            </div>
            <div class="form-group">
                <label for="jenisJabatan">Jenis Jabatan</label>
                <select name="jenisJabatan" id="jenisJabatan" class="form-control">
                    <option value="">Pilih Jenis Jabatan Pengurus</option>
                    {{#select pengurus.jenisJabatan}}
                        {{#each jabatans}}
                            <option value="{{_id}}">{{title}}</option>    
                        {{/each}}                                            
                    {{/select}}
                </select>
            </div>
            <div class="form-group">
                <label for="jabatan">Jabatan</label>
                <input type="text" class="form-control" name="jabatan" id="jabatan" value="{{pengurus.jabatan}}">
            </div>

            <div class="form-group">
                <label for="urutanPengurus">Urutan Pengurus</label>
                <input type="number" class="form-control" name="urutanPengurus" id="urutanPengurus" value="{{pengurus.urutanPengurus}}">
            </div>
            <img src="{{pengurus.file}}" width="50%" alt="{{pengurus.file}}" style="border-radius: 50%;">
            <div>
                <label for="file">Perbarui Foto Pengurus (disarankan rasio panjang:lebar 1:1)</label>
                <input type="file" class="form-control" id="file" name="uploadedFile">
            </div>
            {{!-- <div class="form-group">
                <label for="category">Post Category</label>
                <select name="category" id="category" class="form-control" required>
                    <option value="">Choose Post Category...</option>
                    {{#each categories}}
                        <option value="{{_id}}">{{title}}</option>    
                    {{/each}}
                                            
                </select>
            </div> --}}
            <div class="form-group">
                <label for="deskripsi">Deskripsi Pengurus</label>
                <textarea name="deskripsi" id="deskripsi" class="form-control" value="">{{pengurus.deskripsi}}</textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Simpan Perubahan</button>
        </form>
    </div>
</div>