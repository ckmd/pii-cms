<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add New Pengurus</h4>
    </div>
    <div class="card-body">
        <form action="/admin/pengurus/create" method="post" enctype="multipart/form-data">        
            <div class="form-group">
                <label for="nama">Nama</label>
                <input type="text" class="form-control" name="nama" id="nama" placeholder="Masukkan Nama Pengurus" required>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="jenisJabatan">Jenis Jabatan</label>
                        <select name="jenisJabatan" id="jenisJabatan" class="form-control" required>
                            <option value="">Pilih Jenis Pengurus</option>
                            {{#each jabatans}}
                                <option value="{{_id}}">{{title}}</option>    
                            {{/each}}                                            
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="jabatan">Jabatan</label>
                        <input type="text" class="form-control" name="jabatan" id="jabatan" placeholder="Masukkan Jabatan Pengurus" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="urutanPengurus">Urutan Pengurus</label>
                <input type="number" class="form-control" name="urutanPengurus" id="urutanPengurus" placeholder="Masukkan Urutan Pengurus">
            </div>
            
            <div>
                <label for="file">Foto Pengurus (disarankan rasio panjang:lebar 1:1)</label>
                <input type="file" class="form-control" id="file" name="uploadedFile" required>
            </div>
            <div class="form-group">
                <label for="description">Deskripsi Pengurus</label>
                <textarea name="deskripsi" id="description" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Tambahkan Pengurus baru</button>
        </form>
    </div>
</div>