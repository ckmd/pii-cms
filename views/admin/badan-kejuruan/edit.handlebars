<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Badan Kejuruan</h4>
    </div>
    <div class="card-body">
        <form action="/admin/badan-kejuruan/edit/{{kejuruan._id}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="{{kejuruan._id}}">        
            <div class="form-group">
                <label for="title">Nama Badan Kejuruan</label>
                <input type="text" class="form-control" name="title" id="title" value="{{kejuruan.title}}">
            </div>
            <img src="{{kejuruan.file}}" width="25%" alt="{{kejuruan.file}}" style="border-radius: 50%;">
            <div>
                <label for="file">Perbarui Foto Badan Kejuruan (disarankan rasio panjang:lebar 1:1)</label>
                <input type="file" class="form-control" id="file" name="uploadedFile">
            </div>
            <div class="form-group">
                <label for="deskripsi">Edit Deskripsi Badan Kejuruan</label>
                <textarea name="description" id="description" class="form-control" value="">{{kejuruan.description}}</textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Simpan Perubahan</button>
        </form>
    </div>
</div>