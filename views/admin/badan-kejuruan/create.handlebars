<div class="card">
    <div class="card-header">
        <h4 class="card-title">Tambahkan Badan Kejuruan Baru</h4>
    </div>
    <div class="card-body">
        <form action="/admin/badan-kejuruan/create" method="post" enctype="multipart/form-data">        
            <div class="form-group">
                <label for="title">Nama Badan Kejuruan</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Masukkan Nama Badan Kejuruan" required>
            </div>
            <div>
                <label for="file">Gambar Badan Kejuruan (disarankan rasio panjang:lebar 1:1)</label>
                <input type="file" class="form-control" id="file" name="uploadedFile">
            </div>
            <div class="form-group">
                <label for="description">Deskripsi Badan Kejuruan</label>
                <textarea name="description" id="description" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Tambahkan Badan Kejuruan baru</button>
        </form>
    </div>
</div>