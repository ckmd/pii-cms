<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Jenis Jabatan</h4>
    </div>
    <div class="card-body">
        <form action="/admin/jenis-jabatan/edit/{{jabatan._id}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_id" value="{{jabatan._id}}">        
            <div class="form-group">
                <label for="title">Jenis Jabatan</label>
                <input type="text" class="form-control" name="title" id="title" value="{{jabatan.title}}" required>
            </div>
            <div class="form-group">
                <label for="description">Deskripsi Jenis Jabatan</label>
                <textarea name="description" id="description" class="form-control">{{jabatan.description}}</textarea>
            </div>
            <button class="btn btn-primary btl-lg" type="submit">Saved Changes</button>
        </form>
    </div>
</div>