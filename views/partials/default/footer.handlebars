      } else if(localStorage.getItem('lang') === '#in'){
          document.getElementById("engl").style.color = "#1c1d1b";
          keanggotaan.textContent = language.in.keanggotaan;
          sertifikasi.textContent = language.in.sertifikasi;
          registrasi.textContent = language.in.registrasi;
          cariPost.textContent = language.in.cariPost;
      }
      if(localStorage.length == 0) {
          document.getElementById("engl").style.color = "#1c1d1b";
      }
      //define language via windows hash
      if(window.location.hash){
        if(window.location.hash === "#en"){
          localStorage.setItem('lang','#en');
          document.getElementById("indo").style.color = "#1c1d1b";
          document.getElementById("engl").style.color = "#eb6c24";
          keanggotaan.textContent = language.en.keanggotaan;
          sertifikasi.textContent = language.en.sertifikasi;
          registrasi.textContent = language.en.registrasi;
          cariPost.textContent = language.en.cariPost;
        }
        else if(window.location.hash === "#in"){
          localStorage.setItem('lang','#in');
          document.getElementById("engl").style.color = "#1c1d1b";
          document.getElementById("indo").style.color = "#eb6c24";
          keanggotaan.textContent = language.in.keanggotaan;
          sertifikasi.textContent = language.in.sertifikasi;
          registrasi.textContent = language.in.registrasi;
          cariPost.textContent = language.in.cariPost;
        }
      };
    </script>
