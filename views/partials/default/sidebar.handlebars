    <div class="col-md-4 box" style="background-color: whitesmoke">
    <div id="carouselExampleIndicators" class="carousel slide col-md-12 box" data-ride="carousel">
        <ol class="carousel-indicators">
            {{#each sidebarBanner}}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"></li>
            {{/each}}
        </ol>
        <div class="carousel-inner">
            {{#each sidebarBanner}}
            <div class="carousel-item {{#ifCond @index '==' 0}} active {{/ifCond}} ">
            <div class="card card-link rounded-0 border-0 img-hover-zoom" style="height: 380px">
            <img class="card-img img-fluid" style="object-fit: cover; filter: brightness(0.15);height: 100%;" src="{{this.file}}" alt="Bologna">
            <div class="card-img-overlay text-white d-flex flex-column justify-content-center overlayhovers">
                <h3 class="card-title banner">{{this.title}}</h3>
                <p class="card-text banner">{{this.introText}}</p><br>
                <a class="text-white" href="/{{this.status}}/{{this.slug}}"><i>Klik disini</i></a>
            </div>
        </div>
        </div>
            {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
        {{#each sidebarposts}}
        <a href="/{{status}}/{{this.slug}}">
            <div class="card rounded-0 border-0 img-hover-zoom" style="height: 200px">
                <img class="card-img" src="{{this.file}}" style="object-fit: cover; height: 100%;" alt="">
                <div class="{{#moduloIf @index 2 0}}card-img-overlaysright{{/moduloIf}}
                            {{#moduloIf @index 2 1}}card-img-overlays{{/moduloIf}} 
                            justify-content-end w-50" style="background-color: rgba(255, 255, 255, 0.8);">
                    <div class="container ml-1">
                        <div class="labeltag-{{this.status}}">
                            <div id="{{this.status}}" >
                                <span class="ml-2 text-white"> {{this.status}} </span>
                            </div>
                            {{#ifCond this.status '==' 'Video'}}
                            <span>Engineering for Kids</span>
                            {{/ifCond}}
                        </div>
                        <h6 class="card-title {{this.status}}">{{this.title}}</h6>
                        {{#ifCond this.status '==' 'Video'}}
                            {{#ifCond this.status '==' 'Artikel'}}
                                {{#ifCond this.sponsor1 '!=' ''}}
                                    {{#ifCond this.sponsor2 '!=' ''}}
                                        <center><p class="text-card-content">Brought to you by</p></center>
                                        <div class="row">
                                            <center><img id="sponsor" src="{{this.sponsor1}}" alt="">
                                            <img id="sponsor" src="{{this.sponsor2}}" alt=""></center>
                                        </div>
                                    {{/ifCond}}
                                {{/ifCond}}
                            {{/ifCond}}
                        {{/ifCond}}
                        {{#ifCond this.status '!=' 'Video'}}
                            {{#ifCond this.status '!=' 'Artikel'}}
                                <p class="text-card-content">{{this.introText}}</p>
                            {{/ifCond}}
                        {{/ifCond}}
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
