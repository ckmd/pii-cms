<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8 box" style="background-color: #fff;">
        <!-- Blog Post -->
            <iframe width="100%" height="360" frameborder="0" allow="accelerometer; autoplay; encrypted_media; gyroscope; picture-in-picture" allowfullscreen
                src="{{post.videoLink}}">
            </iframe>
            <div class="card mb-4">
                <div id="labelboxvideo">
                    <p class="card-text">{{post.status}}</p>
                </div>
                <div class="card-body">
                    <h1 class="card-title {{this.status}}">{{post.title}}</h1>
                        <div class="col-md-3">
                            <center><p class="text-card-content">Brought to you by</p></center>
                            <div class="row">
                                <img id="sponsor" src="{{post.sponsor1}}" alt="">
                                <img id="sponsor" src="{{post.sponsor2}}" alt="">
                            </div>
                        </div>
                    <p class="card-text">{{{post.description}}}</p>
                </div>
            </div>
    </div>

    {{> 'default/sidebar'}}
    <!-- Sidebar Widgets Column -->

</div>
<!-- /.row -->
